# Configurações do Servidor
PORT=5000
NODE_ENV=development

# Segurança
JWT_SECRET=sua_chave_secreta_aqui_muito_segura

# Banco de Dados (SQLite é criado automaticamente)
# O arquivo será criado em backend/database/ecoconnect.db

# Google Maps API (Opcional)
GOOGLE_MAPS_API_KEY=sua_api_key_google_maps

# Configurações de Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
